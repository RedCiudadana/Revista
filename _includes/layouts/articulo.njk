{% extends "src/base.njk" %}

{% block head %}
<title>{{title | slug}}</title>

{% endblock %}

{% block content %}

    <!-- section main content -->
	<section class="main-content mt-3">
		<div class="container-xl">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index.html">Inicio</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
                </ol>
            </nav>

			<div class="row gy-4">

				<div class="col-lg-8">
					<!-- post single -->
                    <div class="post post-single">
						<!-- post header -->
						<div class="post-header">
							<h1 class="title mt-0 mb-3">{{title}}</h1>
							<ul class="meta list-inline mb-0">
								{% for autore in collections.autores%}
								{% if autore.data.title == autor %}
								<li class="list-inline-item"><a href="{{autore.url}}"><img class="autor" src="{{autore.data.imagen}}" class="author" alt="author"/>{{autore.data.title}}</a></li>
								<li class="list-inline-item">{{autore.data.correo}}</li>
								{% endif %}
								{% endfor %}
								<li class="list-inline-item">{{fecha | dateFormat('DD/MM/YYYY')}}</li>
							</ul>
						</div>
						<!-- featured image -->
						<div class="featured-image">
							<!--img src="/assets/elementos/images/posts/featured-lg.jpg" alt="post-title" /-->
							<img src="{{imagen}}" alt="post-title" />
						</div>
						<!-- post content -->
						<div class="post-content clearfix">
                            {{content | safe}}
						</div>
						<!-- post bottom section -->
						<div class="post-bottom">
							<div class="row d-flex align-items-center">
								<div class="col-md-6 col-12 text-center text-md-start">
									<!-- tags -->
									<a href="#" class="tag">#Trending</a>
									<a href="#" class="tag">#Video</a>
								</div>
								<div class="col-md-6 col-12">
									<!-- social icons -->
									<ul class="social-icons list-unstyled list-inline mb-0 float-md-end">
										<li class="list-inline-item"><a href="#"><i class="fab fa-facebook-f"></i></a></li>
										<li class="list-inline-item"><a href="#"><i class="fab fa-twitter"></i></a></li>
										<li class="list-inline-item"><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
										<li class="list-inline-item"><a href="#"><i class="fab fa-pinterest"></i></a></li>
										<li class="list-inline-item"><a href="#"><i class="fab fa-telegram-plane"></i></a></li>
										<li class="list-inline-item"><a href="#"><i class="far fa-envelope"></i></a></li>
									</ul>
								</div>
							</div>
						</div>

                    </div>

					<div class="spacer" data-height="50"></div>

					<div class="about-author padding-30 rounded">
						<div class="thumb">
							<img src="/assets/elementos/images/other/avatar-about.png" alt="Katen Doe" />
						</div>
						<div class="details">
							{% for autore in collections.autores%}
							{% if autore.data.title == autor %}
							<h4 class="name"><a href="{{autore.url}}">{{autor}}</a></h4>
							<p>Subtitulo</p>
							{% endif %}
							{% endfor %}
							<!-- social icons -->
							<ul class="social-icons list-unstyled list-inline mb-0">
								<li class="list-inline-item"><a href="#"><i class="fab fa-facebook-f"></i></a></li>
								<li class="list-inline-item"><a href="#"><i class="fab fa-twitter"></i></a></li>
								<li class="list-inline-item"><a href="#"><i class="fab fa-instagram"></i></a></li>
								<li class="list-inline-item"><a href="#"><i class="fab fa-pinterest"></i></a></li>
								<li class="list-inline-item"><a href="#"><i class="fab fa-medium"></i></a></li>
								<li class="list-inline-item"><a href="#"><i class="fab fa-youtube"></i></a></li>
							</ul>
						</div>
					</div>

                </div>

				<div class="col-lg-4">

					<!-- sidebar -->
					<!-- post tabs -->
					<div class="post-tabs rounded bordered">
						<!-- tab navs -->
						<ul class="nav nav-tabs nav-pills nav-fill" id="postsTab" role="tablist">
							<li class="nav-item" role="presentation"><button aria-controls="popular" aria-selected="true" class="nav-link active" data-bs-target="#popular" data-bs-toggle="tab" id="popular-tab" role="tab" type="button">Populares</button></li>
							<li class="nav-item" role="presentation"><button aria-controls="recent" aria-selected="false" class="nav-link" data-bs-target="#recent" data-bs-toggle="tab" id="recent-tab" role="tab" type="button">Recientes</button></li>
						</ul>
						<!-- tab contents -->
						<div class="tab-content" id="postsTabContent">
							<!-- loader -->
							<div class="lds-dual-ring"></div>
							<!-- popular posts -->
							<div aria-labelledby="popular-tab" class="tab-pane fade show active" id="popular" role="tabpanel">
								{% for articulo in collections.articulos%}
								<!-- post -->
								<div class="post post-list-sm circle">
									<div class="thumb circle">
										<a href="{{articulo.url}}">
											<div class="inner">
												<img style="height:60px" src="{{articulo.data.imagen}}" alt="post-title" />
											</div>
										</a>
									</div>
									<div class="details clearfix">
										<h6 class="post-title my-0"><a href="{{articulo.url}}">{{articulo.data.title}}</a></h6>
										<ul class="meta list-inline mt-1 mb-0">
											<li class="list-inline-item">{{articulo.data.fecha | dateFormat('DD/MM/YYYY')}}</li>
										</ul>
									</div>
								</div>
								{% endfor %}

							</div>
							<!-- recent posts -->
							<div aria-labelledby="recent-tab" class="tab-pane fade" id="recent" role="tabpanel">
								{% for articulo in collections.articulos%}
								<!-- post -->
								<div class="post post-list-sm circle">
									<div class="thumb circle">
										<a href="{{articulo.url}}">
											<div class="inner">
												<img style="height:60px" src="{{articulo.data.imagen}}" alt="post-title" />
											</div>
										</a>
									</div>
									<div class="details clearfix">
										<h6 class="post-title my-0"><a href="{{articulo.url}}">{{articulo.data.title}}</a></h6>
										<ul class="meta list-inline mt-1 mb-0">
											<li class="list-inline-item">{{articulo.data.fecha | dateFormat('DD/MM/YYYY')}}</li>
										</ul>
									</div>
								</div>
								{% endfor %}
							</div>
						</div>
					</div>

						<!-- widget advertisement -->
						<div class="widget no-container rounded text-md-center">
							<span class="ads-title">- Sponsored Ad -</span>
							<a href="#" class="widget-ads">
								<img src="/assets/elementos/images/ads/ad-360.png" alt="Advertisement" />	
							</a>
						</div>

						<!-- widget tags -->
						<div class="widget rounded">
							<div class="widget-header text-center">
								<h3 class="widget-title">Categor√≠as</h3>
								<img src="/assets/elementos/images/wave.svg" class="wave" alt="wave" />
							</div>
							<div class="widget-content">
                                {% for cat in categorias%}
                                {% for categoria in collections.categorias %}
                                {% if cat == categoria.data.title %}
								<a href="{{categoria.url}}" class="tag">{{cat}}</a>
                                {% endif %}
                                {% endfor %}
                                {% endfor %}
							</div>		
						</div>

					</div>

				</div>

			</div>

		</div>
	</section>

{% endblock %}